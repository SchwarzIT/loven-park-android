<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvChooseUploadPhotoOption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="8dp"
        android:text="@string/choose_upload_photo_type"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/eFabTakePhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:backgroundTint="@color/purple_700"
        android:gravity="center"
        android:outlineSpotShadowColor="@android:color/transparent"
        android:text="@string/take_photo"
        android:textColor="@color/white"
        app:icon="@drawable/ic_baseline_photo_camera"
        app:iconGravity="start"
        app:iconTint="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/eFabChooseFromGallery"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvChooseUploadPhotoOption"
        tools:ignore="UnusedAttribute" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/eFabChooseFromGallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:backgroundTint="@color/purple_700"
        android:gravity="center"
        android:outlineSpotShadowColor="@android:color/transparent"
        android:text="@string/choose_from_gallery"
        android:textColor="@color/white"
        app:icon="@drawable/ic_baseline_photo_library"
        app:iconGravity="start"
        app:iconTint="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/eFabTakePhoto"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/eFabTakePhoto"
        app:layout_constraintTop_toBottomOf="@id/tvChooseUploadPhotoOption"
        tools:ignore="UnusedAttribute" />


</androidx.constraintlayout.widget.ConstraintLayout>
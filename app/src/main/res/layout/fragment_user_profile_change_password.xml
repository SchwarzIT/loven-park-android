<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".profile.view.UserProfileChangePasswordFragment">

    <TextView
        android:id="@+id/txt_change_password_title"
        style="@style/TitleSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="24dp"
        android:gravity="start|center"
        android:text="@string/user_profile_change_password_title" />

    <TextView
        android:id="@+id/txt_change_password_info"
        style="@style/BodyMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_change_password_title"
        android:layout_marginHorizontal="22dp"
        android:layout_marginTop="6dp"
        android:text="@string/user_profile_change_password_info" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txt_input_layout_old_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_change_password_info"
        android:layout_marginHorizontal="22dp"
        android:layout_marginTop="12dp"
        android:hint="@string/user_profile_change_password_old_hint"
        app:boxBackgroundColor="@color/white"
        app:endIconDrawable="@drawable/ic_edit_square"
        app:endIconMode="custom"
        app:errorEnabled="false"
        app:errorIconDrawable="@drawable/ic_edit_square"
        app:errorIconTint="@color/bittersweet_shimmer"
        app:errorTextColor="@color/bittersweet_shimmer"
        app:hintEnabled="false"
        app:hintTextColor="@color/granite_gray">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_old_password"
            style="@style/LabelLarge"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/user_profile_change_password_old_hint"
            android:inputType="textPassword" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txt_input_layout_new_passowrd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_input_layout_old_password"
        android:layout_marginHorizontal="22dp"
        android:layout_marginTop="12dp"
        android:hint="@string/user_profile_change_password_new_hint"
        app:boxBackgroundColor="@color/white"
        app:endIconDrawable="@drawable/ic_edit_square"
        app:endIconMode="custom"
        app:errorEnabled="false"
        app:errorIconDrawable="@drawable/ic_edit_square"
        app:errorIconTint="@color/bittersweet_shimmer"
        app:errorTextColor="@color/bittersweet_shimmer"
        app:hintEnabled="false"
        app:hintTextColor="@color/granite_gray">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_new_password"
            style="@style/LabelLarge"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/user_profile_change_password_new_hint"
            android:inputType="textPassword" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_confirm"
        style="@style/PrimaryFilledLargeButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="22dp"
        android:layout_marginBottom="70dp"
        android:paddingVertical="12dp"
        android:text="@string/confirm"
        android:textAppearance="@style/LabelLarge"
        android:textStyle="bold" />

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mappin.ui.view.GoogleMapFragment">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/pin_category_scroll_fragment"
        android:name="com.schwarzit.lovenpark.PinCategoriesScrollFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:elevation="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/add_signal_button"
        style="@style/PrimaryFilledLargeButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="60dp"
        android:layout_marginBottom="28dp"
        android:elevation="2dp"
        android:text="@string/create_signal"
        android:textAppearance="@style/LabelLarge"
        android:visibility="gone"
        android:textSize="18sp"
        android:textStyle="bold"
        app:icon="@drawable/megaphone_3_1"
        app:iconPadding="15dp"
        app:iconTint="@color/dirty_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="ContentDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvSignalImage"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/black_glaze_transparent"
    android:layout_marginStart="8dp"
    app:cardElevation="0dp"
    app:cardPreventCornerOverlap="false"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_camera_remove_image"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:elevation="4dp"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            app:iconPadding="0dp"
            app:iconGravity="textStart"
            app:backgroundTint="@color/white"
            android:background="@drawable/camera_image_background"
            app:icon="@drawable/ic_camera_image_del"
            app:iconTint="@color/fern_green"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_camera_image"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="-8dp"
            app:layout_constraintEnd_toEndOf="@id/btn_camera_remove_image"
            app:layout_constraintTop_toBottomOf="@id/btn_camera_remove_image"
            app:shapeAppearanceOverlay="@style/RoundedCameraViewGallery" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>